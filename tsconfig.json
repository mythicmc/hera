{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "target": "es2018",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src/",
    "outDir": "out/",
    "pretty": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules", "out/**/*"]
}
